---
import "@/styles/common.css"
import Head from "@/components/ui/Head.astro"
import Footer from "@/components/ui/Footer.astro"
import site from "@/data/site.json"
import PostHeader from "@/components/feature/post/PostHeader.astro"
const { content } = Astro.props;
const title = `${content.title} | ${site.siteName}`
const url = new URL(Astro.request.url);
const canonical = url.href;
---
<!DOCTYPE html>
<html lang="ja">
<head>
  <Head title={title} description={site.description} canonical={canonical} />
</head>
<body>
  <div data-wrapper="Post" class="grid grid-cols-1 grid-rows-[auto_1fr_auto]">
    <PostHeader title={content.title} date={content.date} />
    <main class="px-8 pb-16 grid grid-cols-1 grid-rows-[1fr_auto]">
      <article id="post" class="max-w-4xl mx-auto w-full">
        <slot />
      </article>
    </main>
    <Footer />
  </div>
</body>
</html>

<style is:global>
  #post > * + * {
    @apply mt-4;
  }
  #post h1 {
    @apply text-2xl;
  }
  #post > * + h1  {
    @apply mt-16;
  }
  #post h2 {
    @apply text-xl leading-8;
  }
  #post > * + h2  {
    @apply mt-16;
  }
  #post h3 {
    @apply text-lg leading-8;
  }
  #post > * + h3 {
    @apply mt-12;
  }
  #post h4, #post h5, #post h6 {
    @apply text-base leading-8;
  }
  #post > * + h4, #post > * + h5, #post > * + h6 {
    @apply mt-12;
  }
  #post p {
    @apply text-base leading-8;
  }
  #post pre {
    @apply px-4 py-2;
  }
  #post ul {
    @apply pl-6;
    list-style: disc;
  }
  #post ol {
    @apply pl-6;
    list-style: decimal;
  }
  #post blockquote * {
    @apply pl-4 text-neutral-400 border-l-2 border-neutral-400;
  }
  #post a {
    @apply text-sky-500 underline underline-offset-2 hover:no-underline;
  }
  #post hr {
    @apply border-neutral-400;
  }
</style>
