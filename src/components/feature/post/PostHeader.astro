---
type Props = {
  title: string;
  date: string;
}
const { title , date } = Astro.props as Props;
const d = new Date(date);
const published = `${d.getFullYear()}.${("00" + (d.getMonth() + 1)).slice(-2)}.${("00" + d.getDate()).slice(-2)}`
---
<header class="flex justify-center items-center flex-col gap-y-4 h-40 px-8">
  <h1 class="text-2xl text-center font-bold">{title}</h1>
  <p><time datetime={published}>{published}</time></p>
</header>