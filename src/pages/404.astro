const url = new URL(Astro.request.url);
const canonical = url.href;
---
<!DOCTYPE html>
<html lang="ja">
<head>
  <Head title={`404 Not Found | ${site.siteName}`} description={site.description} canonical={canonical} />
</head>
<body>
